<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/packageactivity_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择包" />

    <ListView
        android:id="@+id/lv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/packageactivity_rg"
        android:layout_below="@id/packageactivity_textview" 
        android:choiceMode="multipleChoice">
    </ListView>

    <RadioGroup
        android:id="@+id/packageactivity_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/packageactivity_radio0"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:onClick="doClick"
            android:text="新建文件夹" />

        <RadioButton
            android:id="@+id/packageactivity_radio1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:onClick="doClick"
            android:text="删除文件夹" />
    </RadioGroup>

</RelativeLayout>